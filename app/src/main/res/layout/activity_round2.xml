<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ui"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Round1">


    <androidx.cardview.widget.CardView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_centerInParent="true"
                android:padding="20dp"
                android:text="Which statement is used to take input from the user in Java?"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <ProgressBar
                android:id="@+id/simpleProgressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="fill_parent"
                android:layout_height="4dp"
                android:progressTint="@color/black"
                android:layout_alignParentBottom="true"
                android:background="#FFFFFF"
                android:max="60"
                android:progress="50" /><!-- black background color for progress bar-->
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <RadioGroup
        android:id="@+id/radio_ans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/radio_selector"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:elevation="4dp"
            android:paddingHorizontal="20dp"
            android:text="Scanner sc = new Scanner(System.in);" />

        <RadioButton
            android:id="@+id/b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/radio_selector"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:elevation="4dp"
            android:paddingHorizontal="20dp"
            android:text="Atharv" />

        <RadioButton
            android:id="@+id/c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/radio_selector"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:elevation="4dp"
            android:paddingHorizontal="20dp"
            android:text="Omkar" />

        <RadioButton
            android:id="@+id/d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:background="@drawable/radio_selector"
            android:button="@drawable/radio_selector"
            android:elevation="4dp"
            android:paddingHorizontal="20dp"
            android:text="Ganesh" />
    </RadioGroup>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/radio_ans"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button"
        android:text="Next" />
